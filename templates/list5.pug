html 
  head 
    title WISATA ALAM DI NTT
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js")
    link(rel="stylesheet" href="./bg/bg.css")
  body
  div(class="container p-2 my-4 bg-white text-dark")
    div(id="demo" class="carousel slide" data-bs-ride="carousel")
      div(class="carousel-indicators")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="1")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="2")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="3")             
      div(class="carousel-inner")
          div(class="carousel-item active")
              img(src="./carousel/rs4.jpg" width="100%" height="400")
          div(class="carousel-item")
              img(src="./carousel/rs1.jpg" width="100%" height="400")
          div(class="carousel-item")
              img(src="./carousel/rs2.jpg" width="100%" height="400")
          div(class="carousel-item")
              img(src="./carousel/rs3.jpeg" width="100%" height="400")
      button(class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev")
          span(class="carousel-control-prev-icon")
      button(class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next")
          span(class="carousel-control-next-icon")
    nav(class="navbar navbar-expand-sm")
            div(class="container-fluid")
                a(class="navbar-brand" href="/")
                    img(src="./gambar/logo.jpg" alt="Avatar Logo" style="width:40px;" class="rounded-pill")
                button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="collapsibleNavbar")
                    ul(class="navbar-nav")
                        li(class="nav-item")
                            a(class="nav-link" class="text-body" href="/main") Kembali
    br                        
    h2(class="text-center") Tabel Restoran
    hr
    div(class="table-responsive") 
      table(class="table table-sm table-hover ")
        tr 
          th(width="90") ID Restoran
          th(width="200") Nama Restoran
          th(width="180") Lokasi Restoran
          th(width="150") Telepon 
          th(width="150") Email
          th(width="150") Jam
          th(width="150") Gambar
          th(width="100") Ubah Data
          th(width="100") Hapus Data
        each restoran in restorans
          tr 
            td #{restoran['id_restoran']}
            td #{restoran['nama_restoran']}
            td #{restoran['lokasi_restoran']}
            td #{restoran['telepon']}
            td #{restoran['email']}
            td #{restoran['jam']}
            td
              a(href="/restogbr/" + restoran.gambar target="_blank")
                img(src="/restogbr/" + restoran.gambar width="100%") 
            td
              a(class="btn btn-sm btn-outline-primary" href="/edit5?id="+ restoran['id_restoran']) Ubah 

            td 
              a(class="btn btn-danger" onclick="return confirm('Apakah Anda yakin Ingin menghapus Data ini ?')" href="/delete5?id="+ restoran['id_restoran']) Hapus 
    button(type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add5") Tambah Data    
    div(class="container mt-3")
        div(class="modal" id="add5")
            div(class="modal-dialog")
                div(class="modal-content")
                    div(class="modal-header")
                        h4(class="modal-title")
                        button(type="button" class="btn-close" data-bs-dismiss="modal")
                    div(class="modal-body")
                        center
                            img(src="./gambar/add.jpeg" width="100%" height="260")
                        div(class="alert alert-info")
                            h2 Tambah Data 
                        form(action="/add5" method="post" enctype="multipart/form-data")
                          div(class="input-group mb-2")
                            span(class="input-group-text") ID Restoran
                            input(type="number" name="id_restoran" class="form-control" required)
                          div(class="input-group mb-2")
                            span(class="input-group-text") Nama Restoran
                            input(type="text" name="nama_restoran" class="form-control" required)
                          div(class="input-group mb-2")
                            span(class="input-group-text") Lokasi Restoran
                            input(type="text" name="lokasi_restoran" class="form-control" required)
                          div(class="input-group mb-2")
                            span(class="input-group-text") TELEPON
                            input(type="number" name="telepon" class="form-control" required)
                          div(class="input-group mb-2")
                            span(class="input-group-text") EMAIL
                            input(type="email" name="email" class="form-control" required)
                          div(class="input-group mb-2")
                            span(class="input-group-text") Jam
                            input(type="text" name="jam" class="form-control" required)
                          div(class="input-group mb-3")
                            h6(class="d-block") Pilih Gambar yang akan di unggah: 
                            br
                            input(type="file" name="userfile" class="btn btn-sm btn-primary mt-1")  
                          div(style="margin-top: 10px;")
                            input(type="submit" value="Simpan" class="btn btn-success")
                            input(type="button", value="Batal" onClick="javascript:history.go(-1);" class="btn btn-info")
