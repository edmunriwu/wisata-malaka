html 
  head 
    title WISATA ALAM DI NTT
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js")
    link(rel="stylesheet" href="./bg/bg.css")
  body
  div(class="container p-4 my-4 bg-white text-dark")
    div(id="demo" class="carousel slide" data-bs-ride="carousel")
      div(class="carousel-indicators")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="1")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="2")
          button(type="button" data-bs-target="#demo" data-bs-slide-to="3")             
      div(class="carousel-inner")
          div(class="carousel-item active")
            img(src="./carousel/maubesi.jpg" width="100%" height="400")
          div(class="carousel-item")
            img(src="./carousel/wemasa.jpg" width="100%" height="400")
          div(class="carousel-item")
            img(src="./carousel/abudenok.jpg" width="100%" height="400")
          div(class="carousel-item")
            img(src="./carousel/motadikin.jpg" width="100%" height="400")
      button(class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev")
          span(class="carousel-control-prev-icon")
      button(class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next")
          span(class="carousel-control-next-icon")
    nav(class="navbar navbar-expand-sm navbar-dark")
      div(class="container-fluid")
          a(class="navbar-brand" href="/")
              img(src="./gambar/logo.jpg" alt="Avatar Logo" style="width:40px;" class="rounded-pill")
          button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar")
              span(class="navbar-toggler-icon")
          div(class="collapse navbar-collapse" id="collapsibleNavbar")
              ul(class="navbar-nav")
                  li(class="nav-item")
                      a(class="nav-link" class="text-body" href="/main") Kembali
    br
    h2(class="text-center") Tabel Admin
    hr
    div(class="table-responsive") 
      table(class="table table-sm table-hover ")
        tr 
          th(width="90") ID ADMIN
          th(width="200") Nama 
          th(width="180") ALAMAT 
          th(width="150") Telepon 
          th(width="150") Email
          th(width="150") PASSWORD
          th(width="150") Gambar
          th(width="100") Ubah Data
          th(width="100") Hapus Data
        each admin in admins
          tr 
            td #{admin['id_admin']}
            td #{admin['nama']}
            td #{admin['alamat']}
            td #{admin['telepon']}
            td #{admin['email']}
            td #{admin['password']}
            td
              a(href="/admingbr/" + admin.gambar target="_blank")
                img(src="/admingbr/" + admin.gambar width="100%") 
            td
              a(class="btn btn-sm btn-outline-primary" href="/edit1?id="+ admin['id_admin']) Ubah 
            td 
              a(class="btn btn-danger" onclick="return confirm('Apakah Anda yakin Ingin menghapus Data ini ?')" href="/delete1?id="+ admin['id_admin']) Hapus
    button(type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add1") Tambah Data    
    div(class="container mt-3")
      div(class="modal" id="add1")
        div(class="modal-dialog")
          div(class="modal-content")
            div(class="modal-header")
                h4(class="modal-title")
                button(type="button" class="btn-close" data-bs-dismiss="modal")
            div(class="modal-body")
                center
                  img(src="./gambar/add.jpeg" width="100%" height="260")
                div(class="alert alert-info")
                  h2 Tambah Data
                form(action="/add1" method="post" enctype="multipart/form-data")
                  div(class="input-group mb-2")
                    span(class="input-group-text") ID_ADMIN
                    input(type="number" name="id_admin" class="form-control" required)
                  div(class="input-group mb-2")
                    span(class="input-group-text") NAMA
                    input(type="text" name="nama" class="form-control" required)
                  div(class="input-group mb-2")
                    span(class="input-group-text") ALAMAT
                    input(type="text" name="alamat" class="form-control" required)
                  div(class="input-group mb-2")
                    span(class="input-group-text") TELEPON
                    input(type="number" name="telepon" class="form-control" required)
                  div(class="input-group mb-2")
                    span(class="input-group-text") EMAIL
                    input(type="email" name="email" class="form-control" required)
                  div(class="input-group mb-2")
                    span(class="input-group-text") PASSWORD
                    input(type="password" name="password" class="form-control" required)
                  div(class="input-group mb-3")
                    h6(class="d-block") Pilih Gambar yang akan di unggah: 
                    br
                    input(type="file" name="userfile" class="btn btn-sm btn-primary mt-1")  
                  div(style="margin-top: 10px;")
                    input(type="submit" value="Simpan" class="btn btn-success")
                    input(type="button", value="Batal" onClick="javascript:history.go(-1);" class="btn btn-info")
